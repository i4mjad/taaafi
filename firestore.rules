rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data.role == 'admin';
    }

    // Default rule for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Public content
    match /fl_content/{content} {
      allow read: if true;
    }

    // Activities collection
    match /activities/{activityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin(); // Only admins can modify
      
      // Activity tasks are readable by all authenticated users
      match /activityTasks/{taskId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && isAdmin(); // Only admins can modify
      }
    }
    
    // User-specific data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Ongoing activities subcollection
      match /ongoing_activities/{activityId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Scheduled tasks for each activity
        match /scheduledTasks/{taskId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
  }
} 