rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to features collection
    match /features/{document} {
      allow read, write: if true; // TODO: Add proper authentication in production
    }
    
    // Allow read/write access to bans collection
    match /bans/{document} {
      allow read, write: if true; // TODO: Add proper authentication in production
    }
    
    // Allow read/write access to warnings collection
    match /warnings/{document} {
      allow read, write: if true; // TODO: Add proper authentication in production
    }
    
    // Allow read/write access to users collection (if needed)
    match /users/{document} {
      allow read, write: if true; // TODO: Add proper authentication in production
    }
    
    // Community collections - allow read/write for development
    // TODO: Add proper authentication and role-based access in production
    match /communityProfiles/{document} {
      allow read, write: if true;
    }
    
    match /forumPosts/{document} {
      allow read, write: if true;
    }
    
    match /comments/{document} {
      allow read, write: if true;
    }
    
    match /interactions/{document} {
      allow read, write: if true;
    }
    
    match /groups/{document} {
      allow read, write: if true;
    }
    
    match /postCategories/{document} {
      allow read, write: if true;
    }
  }
} 