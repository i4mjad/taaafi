{
  "name": "taaafi-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Ta'aafi",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.0.0",
    "axios": "^1.6.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.0",
    "openai": "^6.9.1",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/sharp": "^0.32.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
