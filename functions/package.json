{
  "name": "ta3afi-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Ta'aafi Smart Alerts",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
