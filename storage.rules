rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to the new path structure
    match /images/{postId}/{attachmentId}/{filename} {
      allow write: if request.auth != null &&
                   filename in ['original.jpg', 'original.jpeg', 'original.png', 'thumb.jpg'];
      allow read: if true; // Public read for all images
    }

    // Legacy community_posts path (keep for existing images)
    match /community_posts/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Profile images
    match /profile_images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default rule for other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
